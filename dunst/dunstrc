# Enhanced dunst setup with Flameshot integration and Gruvbox theme
# Based on EndeavourOS i3 configuration

[global]
    ### Display ###
    monitor = 2
    follow = none
    
    ### Geometry ###
    width = (300, 400)
    height = (0, 300)
    origin = bottom-right
    offset = (30, 40)
    scale = 0
    notification_limit = 8
    
    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 3
    progress_bar_corners = all
    icon_corner_radius = 3
    icon_corners = all
    
    ### Visual ###
    indicate_hidden = yes
    transparency = 0
    separator_height = 3
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 8
    frame_width = 2
    frame_color = "#d79921"
    gap_size = 4
    separator_color = frame
    sort = yes
    idle_threshold = 120
    
    ### Text ###
    font = Noto Sans Regular 10
    line_height = 2
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    
    ### Icons ###
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    icon_path = /usr/share/icons/Qogir/16/status:/usr/share/icons/Qogir/16/devices/:/usr/share/icons/Qogir/24/panel/:/usr/share/icons/Qogir/16/apps/:/usr/share/pixmaps/:/usr/share/icons/Qogir/scalable/apps/
    
    ### History ###
    sticky_history = true
    history_length = 50
    
    ### Misc/Advanced ###
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 8
    corners = all
    ignore_dbusclose = false
    force_xinerama = false
    
    ### Mouse ###
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

# Gruvbox Low Urgency - Green accent
[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#98971a"
    timeout = 4
    icon = /usr/share/icons/Qogir/16/status/package-installed-outdated.svg

# Gruvbox Normal - Yellow accent
[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#d79921"
    timeout = 6
    override_pause_level = 30
    icon = /usr/share/icons/Qogir/16/emblems/emblem-question.svg

# Gruvbox Critical - Red accent
[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#cc241d"
    timeout = 0
    icon = /usr/share/icons/Qogir/16/actions/dialog-warning.svg

# Stack volume notifications
[stack-volumes]
    appname = "some_volume_notifiers"
    set_stack_tag = "volume"

# Flameshot screenshot notifications - Aqua accent
[flameshot]
    appname = "flameshot"
    urgency = normal
    timeout = 10
    background = "#282828"
    foreground = "#ebdbb2"
    frame_color = "#689d6a"
    script = ~/.config/dunst/scripts/flameshot-handler.sh
