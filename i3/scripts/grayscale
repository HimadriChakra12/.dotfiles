#!/bin/bash

# Replace with your actual display name
DISPLAY_NAME=":0"
# Current gamma values
CURRENT_GAMMA=$(xrandr --verbose | grep -A 5 "^$DISPLAY_NAME " | grep "Gamma" | awk '{print $2}')

# Grayscale gamma
GRAYSCALE="0.3:0.59:0.11"
NORMAL="1:1:1"

if [[ "$CURRENT_GAMMA" == "$NORMAL" ]]; then
    xrandr --output $DISPLAY_NAME --gamma $GRAYSCALE
else
    xrandr --output $DISPLAY_NAME --gamma $NORMAL
fi

