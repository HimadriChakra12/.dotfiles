#!/bin/bash

options="â–¶ Play/Pause
â¸ Pause
â¹ Stop
â­ Next
â® Previous
ğŸ”€ Random
ğŸ”Š Volume +
ğŸ”‰ Volume -
ğŸ“„ Now Playing
âŒ Quit"

choice=$(echo -e "$options" | rofi -dmenu -i -p "Deadbeef")

case "$choice" in
    "â–¶ Play/Pause")
        deadbeef --play-pause
        ;;
    "â¸ Pause")
        deadbeef --pause
        ;;
    "â¹ Stop")
        deadbeef --stop
        ;;
    "â­ Next")
        deadbeef --next
        ;;
    "â® Previous")
        deadbeef --prev
        ;;
    "ğŸ”€ Random")
        deadbeef --random
        ;;
    "ğŸ”Š Volume +")
        deadbeef --volume +5
        ;;
    "ğŸ”‰ Volume -")
        deadbeef --volume -5
        ;;
    "ğŸ“„ Now Playing")
        deadbeef --nowplaying-tf "%artist% - %title%" | rofi -dmenu -p "Now Playing"
        ;;
    "âŒ Quit")
        deadbeef --quit
        ;;
esac

